<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ManageAllEventsActivity">

    <!-- Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="@string/back_button"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:alpha="0.8"
            android:fontFamily="@font/sansation_bold"
            android:text="@string/manage_event"
            android:textSize="22sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:maxWidth="300dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Event Controls Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/section_divider"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:onClick="toggleEventDetails">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/event_title"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/sansation_bold"
                    android:textSize="20sp" />

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/event_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/active"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/sansation_bold"
                    android:background="@drawable/status_badge_background"/>

                <ImageView
                    android:id="@+id/add_event"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add"
                    android:contentDescription="@string/add_event"
                    app:tint="@color/sky_blue"
                    android:onClick="toggleEventDetails"/>
            </LinearLayout>

            <!-- List of Events with Control Options -->
            <LinearLayout
                android:id="@+id/event_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                >

                <!-- Organizer Name Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/organizer_admin"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/sansation_bold"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/organizer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_name"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="@font/sansation_regular" />
                </LinearLayout>

                <!-- Event Created On Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/event_created_on"
                        android:textColor="#888888"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/event_creation_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_date"
                        android:textColor="#888888"
                        android:textSize="14sp"
                        android:fontFamily="@font/sansation_regular" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_statistics"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/sansation_bold"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/stats_background"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/accepted"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/sansation_bold" />

                        <TextView
                            android:id="@+id/accepted_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:fontFamily="@font/sansation_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/stats_background"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pending"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/sansation_bold" />

                        <TextView
                            android:id="@+id/pending_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:fontFamily="@font/sansation_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stats_background"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/waitlist"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/sansation_bold" />

                        <TextView
                            android:id="@+id/waitlist_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:fontFamily="@font/sansation_bold" />
                    </LinearLayout>
                </LinearLayout>
                <!-- Control Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/btn_view_event"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/view_event"
                        android:background="@drawable/button_view_event_background"
                        android:textColor="#FFC107"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="8dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/btn_freeze_event"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="@string/freeze"
                        android:background="@drawable/button_freeze_background"
                        android:textColor="#4EA3E4"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="8dp"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/btn_delete_event"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/delete"
                        android:background="@drawable/button_delete_background"
                        android:textColor="#D32F2F"
                        android:paddingHorizontal="24dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingVertical="8dp"
                        android:gravity="center_horizontal" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#232323"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Dashboard Icon -->
        <ImageView
            android:id="@+id/icon_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/dashboard"
            android:src="@drawable/ic_dashboard"
            android:padding="10dp"
            android:layout_gravity="center" />

        <!-- Users Icon -->
        <ImageView
            android:id="@+id/icon_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/users"
            android:src="@drawable/baseline_people_alt_24"
            app:tint="@color/white"
            android:padding="10dp"
            android:layout_gravity="center" />

        <!-- Reports Icon -->
        <ImageView
            android:id="@+id/icon_reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/reports"
            android:src="@drawable/ic_reports"
            android:padding="10dp"
            android:layout_gravity="center" />

        <!-- Notifications Icon -->
        <ImageView
            android:id="@+id/icon_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/notifications"
            android:src="@drawable/ic_notifications"
            android:padding="10dp"
            app:tint="@color/white"
            android:layout_gravity="center" />

        <!-- Settings Icon -->
        <ImageView
            android:id="@+id/icon_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/settings"
            android:src="@drawable/ic_settings"
            android:padding="10dp"
            android:layout_gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
