<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/bg_matat_app"
    tools:context=".ProfileActivity">

    <LinearLayout
            android:id="@+id/headerLayout"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232323"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="9dp"
            android:paddingBottom="16dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/btnBackProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="@string/back_button"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:layout_marginStart="12dp"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:fontFamily="@font/sansation_regular" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_user_profile"
                    android:contentDescription="@string/profile_picture"
                    android:padding="8dp"
                    app:tint="@null"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/initials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansation_regular"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="@string/entrant"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansation_regular"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="@string/name"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_edit"
                    android:enabled="true"
                    android:fontFamily="@font/sansation_regular"
                    android:hint="@string/user_name"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="#CCCCCC"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/sansation_regular"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_edit"
                    android:enabled="true"
                    android:hint="@string/example_example_com"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:fontFamily="@font/sansation_regular"
                    android:textColor="@color/black"
                    android:textColorHint="#CCCCCC"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"
                    android:textSize="16sp"
                    android:fontFamily="@font/sansation_regular"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_edit"
                    android:enabled="true"
                    android:hint="@string/optional"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sansation_regular"
                    android:textColorHint="#CCCCCC"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/notifications"
                        android:fontFamily="@font/sansation_regular"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_weight="1" />

                    <Switch
                        android:id="@+id/switch_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/white"
                        android:trackTint="#B3FFFFFF"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <!-- Organizer Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/are_you_an_organizer"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sansation_regular"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:textSize="16sp"
                        android:layout_weight="1" />

                    <Switch
                        android:id="@+id/switch_organizer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/white"
                        android:trackTint="#B3FFFFFF"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <!-- Organizer Fields (Initially Hidden) -->
                <LinearLayout
                    android:id="@+id/organizerFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/facility_name"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/facilityName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_facility_name"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="#CCCCCC"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp" />

                    <EditText
                        android:id="@+id/facilityAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_facility_address"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="#CCCCCC"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/capacity"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp" />

                    <EditText
                        android:id="@+id/facilityCapacity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_facility_capacity"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="#CCCCCC"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_information"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp" />

                    <EditText
                        android:id="@+id/facilityContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_contact_information"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="#CCCCCC"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp" />

                    <EditText
                        android:id="@+id/facilityEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_facility_email"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="#CCCCCC"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/property_owner"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp" />

                    <EditText
                        android:id="@+id/facilityOwner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_property_owner_name"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="#CCCCCC"/>

                </LinearLayout>

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="14dp"
                    android:text="@string/save"
                    android:textColor="#F5F5F5"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:backgroundTint="#4A90E2"
                    android:fontFamily="@font/sansation_regular"
                    android:elevation="6dp"
                    android:outlineProvider="background" />

                <!-- Temporary buttons to switch view -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="220dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sansation_regular"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:text="@string/admin_view"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/adminView"
                        android:layout_width="wrap_content"
                        android:thumbTint="@color/white"
                        android:trackTint="#B3FFFFFF"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.55"
                    android:background="@color/black" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
