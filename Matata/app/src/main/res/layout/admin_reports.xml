<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Header Section -->
        <TextView
            android:id="@+id/reports_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Reports"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#232323"
            android:padding="8dp"
            android:gravity="center" />

        <!-- Event Reports -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/report_card_background"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Reports"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginVertical="8dp" />

            <!-- Event Performance -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Performance"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#232323"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Events Organized: 50"
                android:textSize="16sp"
                android:textColor="#232323"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active Events: 30 | Inactive Events: 20"
                android:textSize="16sp"
                android:textColor="#232323"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average Attendance: 75%"
                android:textSize="16sp"
                android:textColor="#232323"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waitlisted vs Accepted Participants: 100 vs 300"
                android:textSize="16sp"
                android:textColor="#232323"
                android:layout_marginBottom="4dp" />

            <!-- Event Engagement -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Engagement"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#232323"
                android:layout_marginVertical="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Popular Event: Cultural Night"
                android:textSize="16sp"
                android:textColor="#232323" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Least Popular Event: Study Session"
                android:textSize="16sp"
                android:textColor="#232323" />

            <!-- Event Status Insights Chart -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_chart_placeholder"
                android:scaleType="centerInside"
                android:contentDescription="Event Status Insights Chart" />
        </LinearLayout>

        <!-- User Reports -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/report_card_background"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Reports"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FF5722" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginVertical="8dp" />

            <!-- User Activity -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Activity"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#232323"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Users: 150"
                android:textSize="16sp"
                android:textColor="#232323"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active Users (Last 30 Days): 100"
                android:textSize="16sp"
                android:textColor="#232323"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frozen Users: 30"
                android:textSize="16sp"
                android:textColor="#232323"
                android:layout_marginBottom="4dp" />

            <!-- User Role Distribution -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Role Distribution"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#232323"
                android:layout_marginVertical="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organizers: 20 | Entrants: 130"
                android:textSize="16sp"
                android:textColor="#232323" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_chart_placeholder"
                android:scaleType="centerInside"
                android:contentDescription="User Role Chart" />
        </LinearLayout>

        <!-- Facility Reports -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/report_card_background"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facility Reports"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#03A9F4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginVertical="8dp" />

            <!-- Facility Utilization -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facility Utilization"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#232323"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Facilities: 10"
                android:textSize="16sp"
                android:textColor="#232323"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active Facilities: 8 | Frozen Facilities: 2"
                android:textSize="16sp"
                android:textColor="#232323"
                android:layout_marginBottom="4dp" />

            <!-- Facility Metrics -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Facilities"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#232323"
                android:layout_marginVertical="8dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_chart_placeholder"
                android:scaleType="centerInside"
                android:contentDescription="Top Facilities Chart" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
