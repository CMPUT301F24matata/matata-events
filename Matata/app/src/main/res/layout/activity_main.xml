<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/top_toolbar"
        tools:layout_editor_absoluteX="67dp">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.Toolbar
        android:background="#4EA3E4"
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end"
            android:background="@drawable/blank_profile_pic_background"
            android:contentDescription="Profile Icon"
            android:scaleType="centerCrop"
            android:src="@drawable/blank_profile_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/event_map"
            android:layout_width="20dp"
            android:alpha="0.92"
            android:layout_margin="15dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/baseline_explore_24"
            />
        <ImageView
            android:id="@+id/event_history"
            android:src="@drawable/event_history_24"
            android:layout_margin="15dp"
            android:layout_width="20dp"
            android:padding="5dp"
            android:alpha="0.92"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/qr_scanner"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:alpha="1"
            android:backgroundTint="@color/sky_blue"
            android:elevation="0dp"
            android:tint="@color/white"

            android:paddingTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_qr_code_scanner_24"
            android:translationZ="0dp"
            app:hoveredFocusedTranslationZ="4dp"
            app:maxImageSize="40dp"
            app:useCompatPadding="false" />

        <ImageView
            android:id="@+id/add_event"
            android:layout_width="20dp"
            android:layout_margin="15dp"
            android:alpha="0.92"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/add_event_button"
            />
        <ImageView
            android:id="@+id/event_search"
            android:layout_width="20dp"
            android:layout_margin="15dp"
            android:alpha="0.92"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/baseline_search_24"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>