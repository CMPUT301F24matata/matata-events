<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="FancyEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#CCCCCC</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:textColorHint">#CCCCCC</item>

    </style>

    <style name="CustomSearchHintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
    </style>

</resources>