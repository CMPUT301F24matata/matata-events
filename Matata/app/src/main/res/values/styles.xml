<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NoTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="FancyEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#CCCCCC</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:textColorHint">#CCCCCC</item>

    </style>

    <style name="CustomSearchHintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.MySplashScreen" parent="Theme.SplashScreen">
        <!-- Set the splash screen background -->
        <item name="windowSplashScreenBackground">@color/black</item>
        <!-- Set the splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/img_3</item>
        <!-- Set the duration -->
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.Matata</item>
    </style>
</resources>